generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Film {
    imdbId  String    @id
    title   String?
    originalTitle   String
    plot    String
    year    String
    poster  String
    director String?
    budget Int?
    // Additional TMDB fields for Wrapped awards
    runtime Int?  // Runtime in minutes
    originalLanguage String?  // ISO 639-1 language code (e.g., "en", "ja", "ko")
    revenue BigInt?  // Box office revenue in dollars
    tmdbVoteAverage Float?  // TMDB public rating (0-10)
    genres String?  // JSON array of genre names e.g. '["Action", "Drama"]'
    country String?  // Primary production country name e.g. "United States of America"
    meetings Meeting[]
    watchListEntries WatchListEntry[]
}

model Meeting {
    id          Int         @id @default(autoincrement())
    date        DateTime    @unique
    host        String
    hidden      Boolean     @default(false)

    film        Film        @relation(fields: [filmId], references: [imdbId])
    filmId      String

    scores      Score[]
    showScore   Boolean     @default(false)
}

model Score {
    id          Int     @id @default(autoincrement())
    clubber     String
    score       String
    meetingId   Int
    meeting     Meeting @relation(fields: [meetingId], references: [id])

    @@unique([clubber, meetingId], name: "userMeetingScoreIdentifier")
}

model Session {
    id          String      @db.Uuid @id @default(uuid())
    clubber     String
    expiryTime  DateTime
}

model WatchListEntry {
    id          Int         @id @default(autoincrement())
    clubber     String
    score       String?
    dateWatched DateTime?

    film        Film        @relation(fields: [filmId], references: [imdbId])
    filmId      String

    hidden      Boolean     @default(false)
}

model Theme {
    id          Int         @id @default(autoincrement())
    name        String
    endDate     DateTime
    createdAt   DateTime    @default(now())
}

model UserProfile {
    username    String      @id
    imageUrl    String?
    uploadedFileId String?  @unique
    uploadedFile   UploadedFile? @relation(fields: [uploadedFileId], references: [id])
    hidden      Boolean     @default(false)
    updatedAt   DateTime    @default(now()) @updatedAt
}

model UploadedFile {
    id          String      @id @default(uuid())
    filename    String
    mimeType    String
    data        Bytes
    size        Int
    createdAt   DateTime    @default(now())
    userProfile UserProfile?
}